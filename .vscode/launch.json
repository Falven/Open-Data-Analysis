{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "selectExample",
      "type": "pickString",
      "description": "Select an example to debug",
      "options": ["server", "hub"]
    }
  ],
  "configurations": [
    {
      "name": "Run Playground",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/examples",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dotenv", "ts-node-esm", "--project", "tsconfig.json", "./src/playground.ts"],
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Example",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/examples",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "examples", "start:${input:selectExample}"],
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
